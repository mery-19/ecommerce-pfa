@model Ecommerce.Models.RegisterViewModel

@{
    ViewBag.Title = "RegisterNewAdmin";
    Layout = "~/Views/Shared/_adminDashboard.cshtml";
}

<div class="m-5">
    @{
        ViewBag.Title = "Register Admin";
    }

    <div class="">
        @using (Html.BeginForm("RegisterNewAdmin", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {

            <div class="">

                @Html.AntiForgeryToken()
                <h4>Créer un compte administrateur.</h4>

            </div>
            <hr />
            @Html.ValidationSummary("", new { @class = "text-danger" })

            <div class="form-group row">
                @Html.LabelFor(m => m.UserName, new { @class = "col-4 col-xs-12 control-label" })
                <div class="col-8 col-xs-12">
                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(m => m.Email, new { @class = "col-4 col-xs-12 control-label" })
                <div class="col-8 col-xs-12">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(m => m.Password, new { @class = "col-4 col-xs-12 control-label" })
                <div class="col-8 col-xs-12">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-4 col-xs-12 control-label" })
                <div class="col-8 col-xs-12">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                </div>
            </div>
            <hr />

            <div class="form-group row">
                <div class="col-5 col-xs-12">
                    <input type="submit" class="btn my-btn btn-save" value="S'inscrire" />
                </div>

            </div>


        }

    </div>

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


