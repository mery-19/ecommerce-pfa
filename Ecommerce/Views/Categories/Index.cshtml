@model IEnumerable<Ecommerce.Models.Categorie>
@{
    Layout = "~/Views/Shared/_adminDashboard.cshtml";
}

@{
    ViewBag.Title = "Index";
}
<div id="demo"></div>


<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table" id="categorie">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.libele)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.image)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.libele)
                </td>
                <td>
                    <img src="~/Uploads/Categorie_image/@Html.DisplayFor(model => item.image)" class="img-thumbnail" style="width:48px; height:48px;" />
                </td>
                <td>
                  @*  <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#edit_categorie"
                            data-url="@Url.Action($"Edit/{item.id}")">
                        Edit
                    </button>*@

                    @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.id })
                </td>
            </tr>
        }
    </tbody>

</table>

