@model PagedList.IPagedList<Ecommerce.Models.Commande>
@using PagedList;
@using PagedList.Mvc;

@{
    ViewBag.Title = "Notifications";
    Layout = "~/Views/Shared/_ClientDashboard.cshtml";
}
@{ 
    float i = ViewBag.notif;
    int c = 0;
}
<div class="margin-top">
    <div class="card w-100">
        <div class="card-header btn-orange font-weight-bold">
            Notifications
        </div>
        <ul class="list-group list-group-flush">
            @foreach (var item in Model)
            {
                if (c < i)
                {
                    <li class="list-group-item bg-orange-bold">
                        Status de commande de Numéro d'id <span class="font-weight-bold">@item.id</span> à été change de "En attente" à "Livré"
                        <p>@item.date_update.ToString("HH:mm dd/MM/yyyy")</p>
                    </li>
                }
                else
                {
                    <li class="list-group-item">
                        Status de commande de Numéro d'id <span class="font-weight-bold">@item.id</span> à été change de "En attente" à "Livré"
                        <p>@item.date_update.ToString("HH:mm dd/MM/yyyy")</p>
                    </li>
                }

                c++;
            }

            @if(Model.Count() == 0)
            {
        <li class="list-group-item">
            <h4>
                Aucune donnée disponible
            </h4>
        </li>
            }

        </ul>
    </div>
    <div class="container">
        @Html.PagedListPager(Model, page => Url.Action("Notifications", new { page }))

    </div>
</div>
