@model Ecommerce.Models.Produit
@{
    Layout = "~/Views/Shared/_adminDashboard.cshtml";
}

<div class="mt-5 container">


    <h2>Créer un nouveau produit</h2>

    @using (Html.BeginForm("Create", "Produits", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="row">

        <div class="col-md-6 col-12">
            <div class="form-group">
                @Html.LabelFor(model => model.name, htmlAttributes: new { @class = "control-label" })
                <div>
                    @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="col-md-6 col-12">
            <div class="form-group">
                @Html.LabelFor(model => model.description, htmlAttributes: new { @class = "control-label" })
                <div>
                    @Html.EditorFor(model => model.description, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.description, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

    </div>


    <div class="row">

        <div class="col-md-6 col-12">
            <div class="form-group">
                @Html.LabelFor(model => model.prix_achat, htmlAttributes: new { @class = "control-label" })
                <div>
                    @Html.EditorFor(model => model.prix_achat, new { htmlAttributes = new { @class = "form-control", @type = "number", @min = "0" } })
                    @Html.ValidationMessageFor(model => model.prix_achat, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="col-md-6 col-12">
            <div class="form-group">
                @Html.LabelFor(model => model.prix_vente, htmlAttributes: new { @class = "control-label" })
                <div>
                    @Html.EditorFor(model => model.prix_vente, new { htmlAttributes = new { @class = "form-control", @type = "number", @min = "0" } })
                    @Html.ValidationMessageFor(model => model.prix_vente, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>



    <div class="row">

        <div class="col-md-6 col-12">
            <div class="form-group">
                @Html.LabelFor(model => model.quantite_stock, htmlAttributes: new { @class = "control-label" })
                <div>
                    @Html.EditorFor(model => model.quantite_stock, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.quantite_stock, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="col-md-6 col-12">
            <div class="form-group">
                @Html.LabelFor(model => model.tva, htmlAttributes: new { @class = "control-label" })
                <div>
                    @Html.EditorFor(model => model.tva, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.tva, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>


    <div class="row">

        <div class="col-md-6 col-12">
            <div class="form-group">
                @Html.LabelFor(model => model.image, htmlAttributes: new { @class = "control-label" })
                <div>
                    <input type="file" name="image" id="image" class="form-control" />
                    @Html.ValidationMessageFor(model => model.image, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="col-md-6 col-12">
            <div class="form-group">
                @Html.LabelFor(model => model.id_categorie, "Catégorie", htmlAttributes: new { @class = "control-label" })
                <div>
                    @Html.DropDownList("id_categorie", null, "-- Catégories --", htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.id_categorie, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>



    <div class="row">

        <div class="col-md-6 col-12">
            <div class="form-group">
                @Html.LabelFor(model => model.id_promotion, "Ajouter un promotion", htmlAttributes: new { @class = "control-label" })
                <div>
                    @Html.DropDownList("id_promotion", null,"-- Promotions --", htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.id_promotion, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 col-12">
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>

    </div>
</div>
    }

    <div>
        @Html.ActionLink("Retour à la liste", "Index")
    </div>
</div>
