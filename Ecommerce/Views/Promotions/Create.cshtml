@model Ecommerce.Models.Promotion

@{
    Layout = "~/Views/Shared/_adminDashboard.cshtml";
}

<div class="mt-5 container">


    <h2>Créer un nouveau promotion</h2>

        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="row">
                <div class="col-md-6 col-12">
                    <div class="form-group">
                        @Html.LabelFor(model => model.libele, htmlAttributes: new { @class = "control-label" })
                        <div>
                            @Html.EditorFor(model => model.libele, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.libele, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-12">
                    <div class="form-group">
                        @Html.LabelFor(model => model.description, htmlAttributes: new { @class = "control-label" })
                        <div>
                            @Html.EditorFor(model => model.description, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.description, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 col-12">
                    <div class="form-group">
                        @Html.LabelFor(model => model.taux_promotion, htmlAttributes: new { @class = "control-label" })
                        <div>
                            @Html.EditorFor(model => model.taux_promotion, new { htmlAttributes = new { @class = "form-control", @type = "number" } })
                            @Html.ValidationMessageFor(model => model.taux_promotion, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-12">
                    <div class="form-group">
                        @Html.LabelFor(model => model.date_expiration, htmlAttributes: new { @class = "control-label" })
                        <div>
                            @Html.EditorFor(model => model.date_expiration, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                            @Html.ValidationMessageFor(model => model.date_expiration, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                        @* @Html.DropDownListFor(model => model.Produits, ViewBag.produits as SelectList, new { @multiple = true })
                        *@
                        @Html.DropDownList("Produits", null, "-- Produits --", htmlAttributes: new { @class = "form-control produit_multi", style= "z-index:1",@multiple = true })

                    
            </div>

            <hr>

            <div class="row">
                <div class="col-md-6 col-12">
                    <div class="form-group">
                        <button class="btn btn-save  text-white" id="create">Enregistrer</button>
                    </div>
                </div>
            </div>

        </div>
        <div>
            @Html.ActionLink("Retour à la liste", "Index")
        </div>

</div>