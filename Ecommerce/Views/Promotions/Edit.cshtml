                </div>
            </div>
        </div>
        <div class="col-md-6 col-12">
            <div class="form-group">
                @Html.LabelFor(model => model.date_expiration, htmlAttributes: new { @class = "control-label" })
                <div>
                    @Html.EditorFor(model => model.date_expiration, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
