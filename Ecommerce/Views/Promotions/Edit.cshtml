                    *@                            @Html.ValidationMessageFor(model => model.date_expiration, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>

    <hr />
    <div class="row">
        <div class="col-md-6 col-12">
            <div class="form-group">
                <input type="submit" value="Enregistrer les modification" class="btn btn-save text-white" />
            </div>
        </div>
    </div>

</div>
    }

