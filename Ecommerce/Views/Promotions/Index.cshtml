@model IEnumerable<Ecommerce.Models.Promotion>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_adminDashboard.cshtml";
}

<div class="m-5">


    <div class="row justify-content-around">
        <div class="col-md-6 col-12">
            <h2>Les promotions</h2>
        </div>
        <div class="col-md-6 col-12">
            <p>
                <a href="@Url.Action("create", "Promotions")" class="btn btn-orange text-white d-flex w-50 justify-content-around">
                    <i class="material-icons icon">control_point </i><span> Créer un nouveau</span>
                </a>
            </p>
        </div>
    </div>

    <hr />
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.libele)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.taux_promotion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.date_expiration)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.date_ajout)
                </th>
                <th></th>
            </tr>
        </thead>

        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.libele)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.taux_promotion)
                    </td>
                    <td>
                        @Convert.ToDateTime(item.date_expiration).ToString("dd/MM/yyyy")
                    </td>
                    <td>
                        @Convert.ToDateTime(item.date_ajout).ToString("dd/MM/yyyy")
                    </td>
                    <td>
                        <a href="@Url.Action("Edit", "Promotions", new { id = item.id })" class="text-warning">
                            <i class="material-icons icon ">
                                edit
                            </i>
                        </a>
                        <a href="@Url.Action("Details", "Promotions", new { id = item.id })" class="text-success">
                            <i class="material-icons icon ">
                                visibility
                            </i>
                        </a>
                        @*                    <button type="button" class="btn btn-primary modal_promo" data-id="@item.id" data-toggle="modal" data-target=".bd-example-modal-lg">Large modal</button>
                        *@                    <a data-delete-id="@item.id" class="text-danger delete-link-promo pointer">
                            <i class="material-icons icon ">
                                delete
                            </i>
                        </a>
                        @Html.Hidden("__RequestVerificationToken", @Html.AntiForgeryToken())


                    </td>
                </tr>
            }
        </tbody>

    </table>
    </div>

