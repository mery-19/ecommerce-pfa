@using Ecommerce.Models
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{ 
    ApplicationDbContext db = new ApplicationDbContext();
    ApplicationUser user = db.Users.Where(x => x.UserName == User.Identity.Name).FirstOrDefault();
    var notif = db.UserNotifications.Where(x => x.id_user == user.Id).FirstOrDefault();
}
<div class="wrapper d-flex">
    <div class="sideMenu bg-mattBlackLight">
        <div class="sidebar">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a href="#" class="nav-link px-2 sideMenuToggler">
                        <i class="material-icons icon expandView ">
                            view_list
                        </i>
                        <span class="text">menu caché</span>
                    </a>
                </li>
                <li class="nav-item not-click">
                    <a href="~/Commandes/Notifications" class="nav-link px-2">
                        <i class="material-icons icon expandView ">
                            notifications
                        </i>
                        <span class="text">Notifications(@notif.num)</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="~/LignePaniers/Index" class="nav-link px-2">
                        <i class="material-icons icon">
                            add_shopping_cart
                        </i>
                        <span class="text">Mon Panier</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="~/Commandes" class="nav-link px-2">
                        <i class="material-icons icon">
                            shopping_cart
                        </i>
                        <span class="text">Vos commandes</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="~/Envies/Index" class="nav-link px-2">
                        <i class="material-icons icon">
                            favorite_border
                        </i><span class="text">Liste d'envies</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/CompteUser" class="nav-link px-2">
                        <i class="material-icons icon">

                            settings
                        </i>
                        <span class="text">Mon compte</span>
                    </a>
                </li>
            </ul>
        </div>
    </div>
    <div class="content">
        <main>
            <div class="container-fluid">
                @RenderBody()
            </div>
        </main>
    </div>
</div>
